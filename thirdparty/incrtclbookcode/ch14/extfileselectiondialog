# Create the extfileselectiondialog. Note that this pathname may not
# exist on your system.
iwidgets::extfileselectiondialog .efsd \
  -directory "C:/Program Files/TclPro1.2/lib/iwidgets3.0.0" \
  -title "Extended File Selection Dialog"

# Tell it to draw itself in the middle of the screen.
update idletasks
.efsd center
after idle ".efsd activate"
